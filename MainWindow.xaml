<Window x:Class="PDFConverterWebView2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="PDF Converter" Height="800" Width="600"
        Icon="Resources/Logo.ico">
	<!-- 
        This window serves as the main interface for the PDF Converter application.
        It contains a WebView2 control to display the PDF conversion service website.
    -->
	<Grid>
		<wpf:WebView2 x:Name="webView" Source="https://service.flip2pdf.com/" />
	</Grid>
</Window>
